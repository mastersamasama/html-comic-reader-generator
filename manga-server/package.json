{
  "name": "manga-server",
  "version": "5.0.0-extreme",
  "description": "Extreme performance manga content delivery server with 20,000+ req/s capability",
  "main": "src/extreme-performance-server.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/extreme-performance-server.ts",
    "start:extreme": "bun run --expose-gc src/extreme-performance-server.ts",
    "start:optimized": "bun run src/optimized-server.ts",
    "start:legacy": "bun run src/server.ts",
    "dev": "bun run --hot src/extreme-performance-server.ts",
    "dev:gc": "bun run --expose-gc --hot src/extreme-performance-server.ts",
    "prod": "NODE_ENV=production bun run --expose-gc src/extreme-performance-server.ts",
    "build": "bun build src/extreme-performance-server.ts --outfile=dist/extreme-server.js --target=bun --minify",
    "clean": "rm -rf dist/ logs/ *.log data/extreme-index.json",
    "lint": "echo 'Using Bun built-in TypeScript checking' && bun run --check src/extreme-performance-server.ts",
    "typecheck": "bun run --check src/extreme-performance-server.ts",
    "test": "bun test tests/",
    "test:coverage": "bun test --coverage tests/",
    "test:watch": "bun test --watch tests/",
    "benchmark": "bun run scripts/benchmark.ts",
    "benchmark:extreme": "bun run scripts/extreme-benchmark.ts",
    "monitor": "bun run scripts/monitor.ts",
    "health": "bun run scripts/health-check.ts",
    "stats": "bun run scripts/stats.ts",
    "setup": "bun run scripts/setup.ts",
    "backup": "bun run scripts/backup.ts",
    "migrate": "bun run scripts/migrate.ts",
    "docker:build": "docker build -t manga-server:extreme -f config/Dockerfile .",
    "docker:run": "docker run -p 80:80 -v ./本:/manga:ro manga-server:extreme",
    "docker:dev": "docker run --rm -it -p 80:80 -v ./本:/manga:ro -v $(pwd):/app manga-server:extreme bun run dev",
    "docker:compose": "docker-compose -f config/docker-compose.yml up -d",
    "docker:compose:dev": "docker-compose -f config/docker-compose.dev.yml up",
    "docker:logs": "docker-compose -f config/docker-compose.yml logs -f",
    "docker:stop": "docker-compose -f config/docker-compose.yml down",
    "k8s:deploy": "kubectl apply -f config/k8s/",
    "k8s:delete": "kubectl delete -f config/k8s/",
    "perf:analyze": "bun run scripts/performance-analyzer.ts",
    "perf:profile": "bun run --inspect src/extreme-performance-server.ts",
    "perf:memory": "bun run scripts/memory-analyzer.ts",
    "perf:extreme": "bun run scripts/extreme-benchmark.ts",
    "cache:clear": "curl -X POST http://localhost/api/admin/cache/clear",
    "cache:stats": "curl -s http://localhost/api/stats | jq '.cache'",
    "logs:access": "tail -f logs/access.log",
    "logs:error": "tail -f logs/error.log",
    "logs:performance": "tail -f logs/performance.log",
    "security:scan": "bun run scripts/security-scan.ts",
    "install:deps": "bun install",
    "install:global": "bun link",
    "preinstall": "bun run scripts/check-system.ts",
    "postinstall": "bun run setup",
    "prestart": "bun run typecheck",
    "serve": "bun run prod",
    "quick": "bun run src/extreme-performance-server.ts",
    "debug": "bun run --inspect-brk src/extreme-performance-server.ts",
    "windows:start": "scripts/start-extreme.bat",
    "windows:kill": "scripts/kill-bun.bat"
  },
  "keywords": [
    "manga",
    "content-delivery", 
    "streaming",
    "extreme-performance",
    "20000-rps",
    "bun",
    "typescript",
    "websocket",
    "cache",
    "compression",
    "worker-threads",
    "memory-pools",
    "zero-copy"
  ],
  "author": "Manga Server Team",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manga-server/manga-server.git"
  },
  "bugs": {
    "url": "https://github.com/manga-server/manga-server/issues"
  },
  "homepage": "https://github.com/manga-server/manga-server#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest"
  },
  "config": {
    "port": 80,
    "hostname": "0.0.0.0", 
    "mangaRoot": "./本",
    "cacheSize": 1024,
    "maxConnections": 20000,
    "workerThreads": 8,
    "memoryPoolMB": 512
  },
  "performance": {
    "target": {
      "throughput": "20000+ req/s",
      "responseTime": "<1ms cached, <5ms uncached", 
      "memoryUsage": "<200MB under load",
      "errorRate": "<0.1%"
    },
    "features": [
      "Memory pools (zero GC pressure)",
      "Worker thread pools", 
      "Request batching and pipelining",
      "Bloom filter search optimization",
      "Zero-copy file streaming",
      "Hash-based ultra-fast cache",
      "HTTP/2 with server push ready",
      "Bulletproof Windows shutdown"
    ]
  },
  "optionalDependencies": {},
  "peerDependencies": {},
  "funding": {
    "type": "opencollective", 
    "url": "https://opencollective.com/manga-server"
  },
  "volta": {
    "node": "20.0.0"
  },
  "packageManager": "bun@1.0.0"
}